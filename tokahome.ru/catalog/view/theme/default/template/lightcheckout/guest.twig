<div id="guest-account">
	<div class="row">
	  <div class="col-sm-12">
		<fieldset>
		  <div class="form-group" style="display: {% if customer_groups|length > 1 %} block {% else %} none {% endif %};">
			<label class="control-label">{{ entry_customer_group }}</label>
			{% for customer_group in customer_groups %}
			{% if customer_group.customer_group_id == customer_group_id %}
			<div class="radio">
			  <label>
				<input type="radio" name="customer_group_id" value="{{ customer_group.customer_group_id }}" checked="checked" />
				{{ customer_group.name }}</label>
			</div>
			{% else %}
			<div class="radio">
			  <label>
				<input type="radio" name="customer_group_id" value="{{ customer_group.customer_group_id }}" />
				{{ customer_group.name }}</label>
			</div>
			{% endif %}
			{% endfor %}
		  </div>
		  {% if fields %}
		    {% for name,field in fields %}
			  {% if name == 'guest_firstname' and field.show %}
			  <div class="form-group{% if field.required %} required{% endif %}">
				<label class="control-label" for="input-payment-firstname">{% if field.name[language_id] %}{{ field.name[language_id] }}{% else %}{{ entry_firstname }}{% endif %}</label>
				<input type="text" name="firstname" value="{{ firstname }}" placeholder="{% if field.placeholder[language_id] %}{{ field.placeholder[ language_id ] }}{% else %}{{ entry_firstname }}{% endif %}" id="input-payment-firstname" class="form-control" />
			  </div>
			  {% endif %}
			  {% if name == 'guest_lastname' and field.show %}
			  <div class="form-group{% if field.required %} required{% endif %}">
				<label class="control-label" for="input-payment-lastname">{% if field.name[language_id] %}{{ field.name[language_id] }}{% else %}{{ entry_lastname }}{% endif %}</label>
				<input type="text" name="lastname" value="{{ lastname }}" placeholder="{% if field.placeholder[language_id] %}{{ field.placeholder[ language_id ] }}{% else %}{{ entry_lastname }}{% endif %}" id="input-payment-lastname" class="form-control" />
			  </div>
			  {% endif %}
			  {% if name == 'guest_email' and field.show %}
			  <div class="form-group{% if field.required %} required{% endif %}">
				<label class="control-label" for="input-payment-email">{% if field.name[language_id] %}{{ field.name[language_id] }}{% else %}{{ entry_email }}{% endif %}</label>
				<input type="text" name="email" value="{{ email }}" placeholder="{% if field.placeholder[language_id] %}{{ field.placeholder[ language_id ] }}{% else %}{{ entry_email }}{% endif %}" id="input-payment-email" class="form-control" />
			  </div>
			  {% endif %}
			  {% if name == 'guest_phone' and field.show %}
			  <div class="form-group{% if field.required %} required{% endif %}">
				<label class="control-label" for="input-payment-telephone">{% if field.name[language_id] %}{{ field.name[language_id] }}{% else %}{{ entry_telephone }}{% endif %}</label>
				<input type="text" name="telephone" value="{{ telephone }}" placeholder="{% if field.placeholder[language_id] %}{{ field.placeholder[ language_id ] }}{% else %}{{ entry_telephone }}{% endif %}" id="input-payment-telephone" class="form-control" />
			  </div>
			  {% endif %}
			  {% if name == 'guest_company' and field.show %}
			  <div class="form-group{% if field.required %} required{% endif %}">
				<label class="control-label" for="input-payment-company">{% if field.name[language_id] %}{{ field.name[language_id] }}{% else %}{{ entry_company }}{% endif %}</label>
				<input type="text" name="company" value="{{ company }}" placeholder="{% if field.placeholder[language_id] %}{{ field.placeholder[ language_id ] }}{% else %}{{ entry_company }}{% endif %}" id="input-payment-company" class="form-control" />
			  </div>
			  {% endif %}
			  {% if name == 'guest_address_1' and field.show %}
			  <div class="form-group{% if field.required %} required{% endif %}">
				<label class="control-label" for="input-payment-address-1">{% if field.name[language_id] %}{{ field.name[language_id] }}{% else %}{{ entry_address_1 }}{% endif %}</label>
				<input type="text" name="address_1" value="{{ address_1 }}" placeholder="{% if field.placeholder[language_id] %}{{ field.placeholder[ language_id ] }}{% else %}{{ entry_address_1 }}{% endif %}" id="input-payment-address-1" class="form-control" />
			  </div>
			  {% endif %}
			  {% if name == 'guest_address_2' and field.show %}
			  <div class="form-group{% if field.required %} required{% endif %}">
				<label class="control-label" for="input-payment-address-2">{% if field.name[language_id] %}{{ field.name[language_id] }}{% else %}{{ entry_address_2 }}{% endif %}</label>
				<input type="text" name="address_2" value="{{ address_2 }}" placeholder="{% if field.placeholder[language_id] %}{{ field.placeholder[ language_id ] }}{% else %}{{ entry_address_2 }}{% endif %}" id="input-payment-address-2" class="form-control" />
			  </div>
			  {% endif %}
			  {% if name == 'guest_city' and field.show %}
			  <div class="form-group{% if field.required %} required{% endif %}">
				<label class="control-label" for="input-payment-city">{% if field.name[language_id] %}{{ field.name[language_id] }}{% else %}{{ entry_city }}{% endif %}</label>
				<input type="text" name="city" value="{{ city }}" placeholder="{% if field.placeholder[language_id] %}{{ field.placeholder[ language_id ] }}{% else %}{{ entry_city }}{% endif %}" id="input-payment-city" class="form-control" />
			  </div>
			  {% endif %}
			  {% if name == 'guest_postcode' and field.show %}
			  <div class="form-group{% if field.required %} required{% endif %}">
				<label class="control-label" for="input-payment-postcode">{% if field.name[language_id] %}{{ field.name[language_id] }}{% else %}{{ entry_postcode }}{% endif %}</label>
				<input type="text" name="postcode" value="{{ postcode }}" placeholder="{% if field.placeholder[language_id] %}{{ field.placeholder[ language_id ] }}{% else %}{{ entry_postcode }}{% endif %}" id="input-payment-postcode" class="form-control" />
			  </div>
			  {% endif %}
			  {% if name == 'guest_country_id' %}
			  <div class="form-group{% if field.required %} required{% endif %}{% if not field.show %} smart-hide{% endif %}">
				<label class="control-label" for="input-payment-country">{% if field.name[language_id] %}{{ field.name[language_id] }}{% else %}{{ entry_country }}{% endif %}</label>
				<select name="light_country_id" id="input-payment-country" class="form-control">
				  <option value="">{{ text_select }}</option>
				 {% for country in countries %}
				  {% if country.country_id == country_id %}
				  <option value="{{ country.country_id }}" selected="selected">{{ country.name }}</option>
				  {% else %}
				  <option value="{{ country.country_id }}">{{ country.name }}</option>
				  {% endif %}
				  {% endfor %}
				</select>
			  </div>
			  {% endif %}
			  {% if name == 'guest_zone_id' and field.show %}
			  <div class="form-group{% if field.required %} required{% endif %}">
				<label class="control-label" for="input-payment-zone">{% if field.name[language_id] %}{{ field.name[language_id] }}{% else %}{{ entry_zone }}{% endif %}</label>
				<select name="light_zone_id" id="input-payment-zone" class="form-control">
					{% if zones %}
					  <option value="0" selected="selected">{{ text_none }}</option>
					  {% for zone in zones %}
						<option value="{{ zone.zone_id }}"{% if zone.zone_id == zone_id %} selected="selected"{% endif %}>{{ zone.name }}</option>
					  {% endfor %}
					{% endif %}
				</select>
			  </div>
			  {% endif %}
			  {% if name == 'guest_custom' and field.show %}
			    {% for custom_field in custom_fields %}
				  {% if custom_field.location == 'account' or custom_field.location == 'address' %}
				    <div id="guest">
					  {% if custom_field.type == 'select' %}
					  <div id="payment-custom-field{{ custom_field.custom_field_id }}" class="form-group custom-field" data-sort="{{ custom_field.sort_order }}">
						<label class="control-label" for="input-payment-custom-field{{ custom_field.custom_field_id }}">{{ custom_field.name }}</label>
						<select name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" id="input-payment-custom-field{{ custom_field.custom_field_id }}" class="form-control">
						  <option value="">{{ text_select }}</option>
						  {% for custom_field_value in custom_field.custom_field_value %}
						  {% if guest_custom_field[custom_field.custom_field_id] and custom_field_value.custom_field_value_id == guest_custom_field[custom_field.custom_field_id] %}
						  <option value="{{ custom_field_value.custom_field_value_id }}" selected="selected">{{ custom_field_value.name }}</option>
						  {% else %}
						  <option value="{{ custom_field_value.custom_field_value_id }}">{{ custom_field_value.name }}</option>
						  {% endif %}
						  {% endfor %}
						</select>
					  </div>
					  {% endif %}
					  {% if custom_field.type == 'radio' %}
					  <div id="payment-custom-field{{ custom_field.custom_field_id }}" class="form-group custom-field" data-sort="{{ custom_field.sort_order }}">
						<label class="control-label">{{ custom_field.name }}</label>
						<div id="input-payment-custom-field{{ custom_field.custom_field_id }}"> {% for custom_field_value in custom_field.custom_field_value %}
						  <div class="radio"> {% if guest_custom_field[custom_field.custom_field_id] and custom_field_value.custom_field_value_id == guest_custom_field[custom_field.custom_field_id] %}
							<label>
							  <input type="radio" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{{ custom_field_value.custom_field_value_id }}" checked="checked" />
							  {{ custom_field_value.name }}</label>
							{% else %}
							<label>
							  <input type="radio" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{{ custom_field_value.custom_field_value_id }}" />
							  {{ custom_field_value.name }}</label>
							{% endif %} </div>
						  {% endfor %} </div>
					  </div>
					  {% endif %}
					  {% if custom_field.type == 'checkbox' %}
					  <div id="payment-custom-field{{ custom_field.custom_field_id }}" class="form-group custom-field" data-sort="{{ custom_field.sort_order }}">
						<label class="control-label">{{ custom_field.name }}</label>
						<div id="input-payment-custom-field{{ custom_field.custom_field_id }}"> {% for custom_field_value in custom_field.custom_field_value %}
						  <div class="checkbox"> {% if guest_custom_field[custom_field.custom_field_id] and  custom_field_value.custom_field_value_id in guest_custom_field[custom_field.custom_field_id] %}
							<label>
							  <input type="checkbox" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}][]" value="{{ custom_field_value.custom_field_value_id }}" checked="checked" />
							  {{ custom_field_value.name }}</label>
							{% else %}
							<label>
							  <input type="checkbox" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}][]" value="{{ custom_field_value.custom_field_value_id }}" />
							  {{ custom_field_value.name }}</label>
							{% endif %} </div>
						  {% endfor %} </div>
					  </div>
					  {% endif %}
					  {% if custom_field.type == 'text' %}
					  <div id="payment-custom-field{{ custom_field.custom_field_id }}" class="form-group custom-field" data-sort="{{ custom_field.sort_order }}">
						<label class="control-label" for="input-payment-custom-field{{ custom_field.custom_field_id }}">{{ custom_field.name }}</label>
						<input type="text" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{% if guest_custom_field[custom_field.custom_field_id] %} {{ guest_custom_field[custom_field.custom_field_id] }} {% else %} {{ custom_field.value }} {% endif %}" placeholder="{{ custom_field.name }}" id="input-payment-custom-field{{ custom_field.custom_field_id }}" class="form-control" />
					  </div>
					  {% endif %}
					  {% if custom_field.type == 'textarea' %}
					  <div id="payment-custom-field{{ custom_field.custom_field_id }}" class="form-group custom-field" data-sort="{{ custom_field.sort_order }}">
						<label class="control-label" for="input-payment-custom-field{{ custom_field.custom_field_id }}">{{ custom_field.name }}</label>
						<textarea name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" rows="5" placeholder="{{ custom_field.name }}" id="input-payment-custom-field{{ custom_field.custom_field_id }}" class="form-control">{% if guest_custom_field[custom_field.custom_field_id] %} {{ guest_custom_field[custom_field.custom_field_id] }} {% else %} {{ custom_field.value }} {% endif %}</textarea>
					  </div>
					  {% endif %}
					  {% if custom_field.type == 'file' %}
					  <div id="payment-custom-field{{ custom_field.custom_field_id }}" class="form-group custom-field" data-sort="{{ custom_field.sort_order }}">
						<label class="control-label">{{ custom_field.name }}</label>
						<br />
						<button type="button" id="button-payment-custom-field{{ custom_field.custom_field_id }}" data-loading-text="{{ text_loading }}" class="btn btn-default"><i class="fa fa-upload"></i> {{ button_upload }}</button>
						<input type="hidden" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{% if guest_custom_field[custom_field.custom_field_id] %} {{ guest_custom_field[custom_field.custom_field_id] }} {% endif %}" id="input-payment-custom-field{{ custom_field.custom_field_id }}" />
					  </div>
					  {% endif %}
					  {% if custom_field.type == 'date' %}
					  <div id="payment-custom-field{{ custom_field.custom_field_id }}" class="form-group custom-field" data-sort="{{ custom_field.sort_order }}">
						<label class="control-label" for="input-payment-custom-field{{ custom_field.custom_field_id }}">{{ custom_field.name }}</label>
						<div class="input-group date">
						  <input type="text" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{% if guest_custom_field[custom_field.custom_field_id] %} {{ guest_custom_field[custom_field.custom_field_id] }} {% else %} {{ custom_field.value }} {% endif %}" placeholder="{{ custom_field.name }}" data-date-format="YYYY-MM-DD" id="input-payment-custom-field{{ custom_field.custom_field_id }}" class="form-control" />
						  <span class="input-group-btn">
						  <button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
						  </span></div>
					  </div>
					  {% endif %}
					  {% if custom_field.type == 'time' %}
					  <div id="payment-custom-field{{ custom_field.custom_field_id }}" class="form-group custom-field" data-sort="{{ custom_field.sort_order }}">
						<label class="control-label" for="input-payment-custom-field{{ custom_field.custom_field_id }}">{{ custom_field.name }}</label>
						<div class="input-group time">
						  <input type="text" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{% if guest_custom_field[custom_field.custom_field_id] %} {{ guest_custom_field[custom_field.custom_field_id] }} {% else %} {{ custom_field.value }} {% endif %}" placeholder="{{ custom_field.name }}" data-date-format="HH:mm" id="input-payment-custom-field{{ custom_field.custom_field_id }}" class="form-control" />
						  <span class="input-group-btn">
						  <button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
						  </span></div>
					  </div>
					  {% endif %}
					  {% if custom_field.type == 'time' %}
					  <div id="payment-custom-field{{ custom_field.custom_field_id }}" class="form-group custom-field" data-sort="{{ custom_field.sort_order }}">
						<label class="control-label" for="input-payment-custom-field{{ custom_field.custom_field_id }}">{{ custom_field.name }}</label>
						<div class="input-group datetime">
						  <input type="text" name="custom_field[{{ custom_field.location }}][{{ custom_field.custom_field_id }}]" value="{% if guest_custom_field[custom_field.custom_field_id] %} {{ guest_custom_field[custom_field.custom_field_id] }} {% else %} {{ custom_field.value }} {% endif %}" placeholder="{{ custom_field.name }}" data-date-format="YYYY-MM-DD HH:mm" id="input-payment-custom-field{{ custom_field.custom_field_id }}" class="form-control" />
						  <span class="input-group-btn">
						  <button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
						  </span></div>
					  </div>
					  {% endif %}
					</div>					
				  {% endif %}
			    {% endfor %}
			  {% endif %}
			{% endfor %}
		{% endif %}
		</fieldset>
	  </div>
	</div>
	{% if shipping_required and status.payment_address and status.shipping and fields.batches_address.batches_address.show %}
	<div class="checkbox">
	  <label> {% if shipping_address %}
		<input type="checkbox" name="shipping_address" value="1" checked="checked" />
		{% else %}
		<input type="checkbox" name="shipping_address" value="1" />
		{% endif %}
		{{ entry_shipping }}</label>
	</div>
	{% endif %}
</div>
<script type="text/javascript"><!--
if (localStorage.getItem('shipping_address') == false) {
	$('input[name=\'shipping_address\']').removeAttr('checked');
}

$('#collapse-payment-address input[name=\'customer_group_id\']').on('change', function() {
	$.ajax({
		url: 'index.php?route=lightcheckout/checkout/customfield&customer_group_id=' + this.value,
		dataType: 'json',
		success: function(json) {
			$('#collapse-payment-address .custom-field').hide();
			$('#collapse-payment-address .custom-field').removeClass('required');

			for (i = 0; i < json.length; i++) {
				custom_field = json[i];

				$('#payment-custom-field' + custom_field['custom_field_id']).show();

				if (custom_field['required']) {
					$('#payment-custom-field' + custom_field['custom_field_id']).addClass('required');
				} else {
					$('#payment-custom-field' + custom_field['custom_field_id']).removeClass('required');
				}
			}
		},
		error: function(xhr, ajaxOptions, thrownError) {
			/*alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);*/
		}
	});
});

$('#collapse-payment-address input[name=\'customer_group_id\']:checked').trigger('change');
