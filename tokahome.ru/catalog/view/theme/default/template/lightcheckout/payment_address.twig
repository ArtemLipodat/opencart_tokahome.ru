	form input{
		width: 450px;
		padding: 13px 19px;
		outline: none;
		font-weight: 400;
		font-size: 20px;
		color: #C4C4C4;
		margin-top: 15px;
		border-radius: 10px;
		border: 1px solid rgba(67, 76, 94, 0.5);
	}

	@media (min-width: 320px) and (max-width: 490px) {
		form input {
			width: 85%;
			padding: 10px 15px;
			font-size: 16px;
		}
