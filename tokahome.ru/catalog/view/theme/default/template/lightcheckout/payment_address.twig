	#checkout-checkout #accordion .panel-body{
		padding: 0;
	}

	form input[name="firstname"]{
		margin-top: 0;
	}

	.text-danger{
		color: red;
	}

	#input-payment-zone{
		/*width: 170px;*/
		margin-top: 20px;
		background-color: #C4C4C4;
		color: #fff;
		font-weight: 400;
		font-size: 16px;
		padding: 4px;
		outline: none;
		text-align: center;
